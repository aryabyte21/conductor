{
  "name": "conductor",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev:desktop": "pnpm --filter @conductor/desktop tauri dev",
    "dev:web": "pnpm --filter @conductor/web dev",
    "build:desktop": "pnpm --filter @conductor/desktop tauri build",
    "build:web": "pnpm --filter @conductor/web build",
    "type-check": "nx run-many --target=type-check",
    "lint": "nx run-many --target=lint",
    "check:all": "nx run-many --target=type-check,lint",
    "graph": "nx graph"
  },
  "devDependencies": {
    "nx": "^22.5.3"
  }
}
